{{!-- {{#if auth}} --}}

<div class="container">
<form action="/users/save" method="post">

{{!-- NOME DO CARRO --}}
<div class="row">
<div class="col-3">
<label>Nome do Carro:</label>
<input type="text" class="form-control" name="nameP" id="nome">
</div>

{{!-- MARCA --}}
  <div class="col-2">
    <label for="cate">Marca:</label>
    <select class="form-control">
      <option value="">Chevrolet</option>
      <option value="">Toyoata</option>
      <option value="">BMW</option>
      <option value="">Audi</option>
      <option value="">Aston Martin</option>
    </select>
  </div>

  {{!-- POTÊNCIA --}}
  <div class="col-2">
    <label for="cate">Potencia:</label>
    <select class="form-control">
      <option value="">100 CV</option>
      <option value="">200 CV</option>
      <option value="">350 CV</option>
      <option value="">450 CV</option>
      <option value="">500 CV</option>
    </select>
  </div>

  {{!-- CORES --}}
  <div class="col-2">
    <label for="cate">Cor:</label>
    <select class="form-control">
      <option value="">Vermelho</option>
      <option value="">Preto</option>
      <option value="">Azul</option>
      <option value="">Amarelo</option>
      <option value="">Cinza</option>
    </select>
  </div>

  {{!-- ANO --}}
  <div class="col-2">
    <label for="cate">Ano de Fabricação:</label>
    <select class="form-control">
      <option value="">2020</option>
      <option value="">2021</option>
      <option value="">2022</option>
      <option value="">2023</option>
      <option value="">2024</option>
    </select>
  </div>
</div>
<br>

{{!-- BOTÃO --}}
<button type="submit" class="btn btn-success">Enviar</button>
<a href="/" class="btn btn-primary">Home</a>

</form>

</div>

{{!-- {{/if}} --}}